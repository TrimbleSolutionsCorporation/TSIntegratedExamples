        <GroupBox Grid.Row="4" Header="General">
            <StackPanel Orientation="Vertical">

                <!--Binding Type-->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="165" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="26" />
                    </Grid.RowDefinitions>

                    <Label Grid.Column="0" Grid.Row="0" Content="Rebar Grade" />
                    <ComboBox Grid.Column="1" Grid.Row="0" ItemsSource="{Binding Path=RebarGradeOptions, Mode=Oneway}"
                              SelectedValue="{Binding Path=CurrentSetting.RebarGrade, Mode=TwoWay}" Height="25" />
                </Grid>

                <!--Binding Type-->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="165" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="26" />
                    </Grid.RowDefinitions>

                    <Label Grid.Column="0" Grid.Row="0" Content="Binding Type" />
                    <ComboBox Grid.Column="1" Grid.Row="0" ItemsSource="{Binding Path=BindingTypeOptions, Mode=Oneway}"
                              SelectedValue="{Binding Path=CurrentSetting.BindingName, Mode=TwoWay}" Height="25" />
                </Grid>
            </StackPanel>
        </GroupBox>

    </Grid>
</Window>